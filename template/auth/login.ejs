<% layout ('../layout/pattern') -%>

<div class="container">
    <h1 class="text-center m-3">Авторизация</h1>
    <div class="row justify-content-md-center">
        <div class="col col-md-8 col-lg-6">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email">Почта</label>
                    <input type="email" name="username" class="form-control" id="email" placeholder="Почта" required>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Пароль" required>
                </div>
                <button type="submit" class="btn btn-primary">Войти</button>
                <h6 class="text-right"><a href="/registration">Зарегистрироваться</a></h6>
            </form>
            <% if ( expressFlash.length > 0 ) { %>
                <p style="color: red"><%= expressFlash %> </p>
            <% } %>
        </div>
    </div>
</div>
</div>